{
    "name": "layout-manager-react",
    "version": "0.0.5",
    "description": "A modern React layout manager using flexbox with percentage-based sizing",
    "main": "./dist/index.umd.js",
    "module": "./dist/index.es.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.es.js",
            "require": "./dist/index.umd.js",
            "types": "./dist/index.d.ts"
        },
        "./dist/style.css": "./dist/style.css"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build && tsc --declaration --emitDeclarationOnly --outDir dist",
        "preview": "vite preview",
        "type-check": "tsc --noEmit",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "react",
        "layout",
        "flexbox",
        "resizable",
        "drag-and-drop",
        "typescript"
    ],
    "author": "Ashkan Hooshidar",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hrashkan/layout-manager-react.git"
    },
    "homepage": "https://github.com/hrashkan/layout-manager-react#readme",
    "bugs": {
        "url": "https://github.com/hrashkan/layout-manager-react/issues"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "devDependencies": {
        "@types/node": "^24.10.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.0.0",
        "typescript": "^5.0.0",
        "vite": "^4.4.0"
    }
}